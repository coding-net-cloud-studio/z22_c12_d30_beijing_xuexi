				// },
				// {
				// 	"command": "command-runner.run",
				// 	"args": {
				// 		"command": "echo ${workspaceFolder}"
				// 	}
				// },
				// {
				// 	"command": "command-runner.run",
				// 	"args": {
				// 		"command": "echo ${file}"
				// 	}
				// },
				// NOTE 这里使用Handy notebook的模式
				{
					"command": "command-runner.run",
					"args": {
						"command": "wmcloudstudio ${file}"
